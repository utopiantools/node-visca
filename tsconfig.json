{
	"compilerOptions": {
		"declaration": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		// "lib": [
		// 	"es2018"
		// ],
		"module": "commonjs",
		"target": "es6",
		"baseUrl": ".",
		"paths": {
			"*": [
				"node_modules/*",
				"src/types/*"
			]
		},
		"typeRoots": [
			"node_modules/@types",
			"src/types"
		],
		"outDir": "./dist",
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"./node-gamepad",
		"./dist"
	]
}
